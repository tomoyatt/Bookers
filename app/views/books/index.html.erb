<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <today>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </today>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <div id="error">
    <% if @book.errors.count == 1 %>
      <p>
        <%= @book.errors.count %> error prohibited this book from being saved:
      </p>
    <% else %>
      <p>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </p>
    <% end %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: books_path, metod: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>